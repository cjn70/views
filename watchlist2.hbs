  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}
body{
	background-color:#f2f2f2
}


}
</style>
<body>

<div class="topnav">
  <a href="/loginhome">DashBoard</a>
  <a href="/logOut">LogOut</a>

</div>

<div style="padding-left:16px">
  <h2><!-- TradingView Widget BEGIN -->
<div class="tradingview-widget-container">
  <div class="tradingview-widget-container__widget"></div>
  <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com" rel="noopener" target="_blank"><span class="blue-text">Quotes</span></a> by TradingView</div>
  <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-tickers.js" async>
  {
  "symbols": [
    {
      "title": "S&P 500",
      "proName": "OANDA:SPX500USD"
    },
    {
      "title": "Nasdaq 100",
      "proName": "OANDA:NAS100USD"
    },
    {
      "title": "EUR/USD",
      "proName": "FX_IDC:EURUSD"
    },
    {
      "title": "BTC/USD",
      "proName": "BITSTAMP:BTCUSD"
    },
    {
      "title": "ETH/USD",
      "proName": "BITSTAMP:ETHUSD"
    }
  ],
  "colorTheme": "light",
  "isTransparent": false,
  "locale": "en"
}
  </script>
  <head>
  <title>Watchlist</title>
  <meta charset="utf-8">
</head>
<body>

<div class="container">
  <h2>User: {{username}} watch list</h2>
  <form action="/deletesym/" class="form-inline" method="POST">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Stock Symbol</th>
        <th>Stock Price</th>
        <th>Stock Market Cap</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        {{#each result}}
            <tr>
                <td align="center"><input type="radio" class="form-control" name="symbol1" value="{{this.symbol}}">{{this.symbol}}</td>
                 <td align="center">{{this.price}}</td>
                 <td align="center">{{this.mkp}}</td>

            </tr>
        {{/each}}
      </tr>
    </tbody>
  </table>
  <button  type="submit"  class="btn btn-default" >Remove</button>
</form>
</div>

</body>
</html>
